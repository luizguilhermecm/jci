            <%= check_box_tag :disp_domManha_pf, checked_value = true %>
        </div>
        <div class="field">
            <p> Domingo Tarde: </p>
            <%= check_box_tag :disp_domTarde_pf, checked_value = true %>
        </div>
        <div class="field">
            <p> Domingo Noite: </p>
            <%= check_box_tag :disp_domNoite_pf, checked_value = true %>
        </div>
        <div class="field">
            <p> Sábado Manhã: </p>
            <%= check_box_tag :disp_sabManha_pf, checked_value = true %>
        </div>
        <div class="field">
            <p> Sábado Tarde: </p>
            <%= check_box_tag :disp_sabTarde_pf, checked_value = true %>
        </div>
        <div class="field">
            <p> Sábado Noite: </p>
            <%= check_box_tag :disp_sabNoite_pf, checked_value = true %>
        </div>
        <div class="field">
            <p> Sexta Manhã: </p>
            <%= check_box_tag :disp_sexManha_pf, checked_value = true %>
        </div>
        <div class="field">
            <p> Sexta Tarde: </p>
            <%= check_box_tag :disp_sexTarde_pf, checked_value = true %>
        </div>
        <div class="field">
            <p> Sexta Noite: </p>
            <%= check_box_tag :disp_sexNoite_pf, checked_value = true %>
        </div>
        <div class="field">
            <p> Quinta Manhã: </p>
            <%= check_box_tag :disp_quiManha_pf, checked_value = true %>
        </div>
        <div class="field">
            <p> Quinta Tarde: </p>
            <%= check_box_tag :disp_quiTarde_pf, checked_value = true %>
        </div>
        <div class="field">
            <p> Quinta Noite: </p>
            <%= check_box_tag :disp_quiNoite_pf, checked_value = true %>
        </div>
        <div class="field">
            <p> Quarta Manhã: </p>
            <%= check_box_tag :disp_quaManha_pf, checked_value = true %>
        </div>
        <div class="field">
            <p> Quarta Tarde: </p>
            <%= check_box_tag :disp_quaTarde_pf, checked_value = true %>
        </div>
        <div class="field">
            <p> Quarta Noite: </p>
            <%= check_box_tag :disp_quaNoite_pf, checked_value = true %>
        </div>
        <div class="field">
            <p> Terça Manhã: </p>
            <%= check_box_tag :disp_terManha_pf, checked_value = true %>
        </div>
        <div class="field">
            <p> Terça Tarde: </p>
            <%= check_box_tag :disp_terTarde_pf, checked_value = true %>
        </div>
        <div class="field">
            <p> Terça Noite: </p>
            <%= check_box_tag :disp_terNoite_pf, checked_value = true %>
        </div>
        <div class="field">
            <p> Segunda Manhã: </p>
            <%= check_box_tag :disp_segManha_pf, checked_value = true %>
        </div>
        <div class="field">
            <p> Segunda Tarde: </p>
            <%= check_box_tag :disp_segTarde_pf, checked_value = true %>
        </div>
        <div class="field">
            <p> Segunda Noite: </p>
            <%= check_box_tag :disp_segNoite_pf, checked_value = true %>
        </div>
        <%= submit_tag "Buscar por Disponibilidade" %> 
    <% end  %>

    <%= form_tag({:controller => 'voluntario_pessoa_fisicas', :action => 'busca_experiencia'}, :method => 'get') do %>
        <h3>Busca por experiência:</h3>
        <%= submit_tag "Buscar por Experiência" %> 
    <% end  %>

    <%= form_tag({:controller => 'voluntario_pessoa_fisicas', :action => 'busca_atuacao'}, :method => 'get') do %>
        <h3>Busca por Área de Atuação:</h3>
        <%= check_box_tag :atuacao_juridica_pf, checked_value = true %> Jurídica <br/>
        <%= check_box_tag :atuacao_administrativa_pf, checked_value = true %> Administrativa <br/>
        <%= check_box_tag :atuacao_recreacao_pf, checked_value = true %> Recreação<br/>
        <%= check_box_tag :atuacao_saude_pf, checked_value = true  %> Saúde<br/>
        <%= check_box_tag :atuacao_educacao_pf, checked_value = true  %> Educação<br/>
        <%= check_box_tag :atuacao_manutencao_pf, checked_value = true  %> Manutenção<br/>
        <%= check_box_tag :atuacao_doacao_pf, checked_value = true %> Doação<br/>
        <%= check_box_tag :atuacao_outro_pf, checked_value = true %> Outros<br/> 
        <%= submit_tag "Buscar por Atuação" %> 
    <% end  %>
    
</table>
</div>
