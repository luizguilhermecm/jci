<!-- render abaixo abre uma div que está sendo fechada na ultima linha dessa pagina -->
<%= render 'home/menu' %>
<div id="corpo">

<h1>Lista de Voluntários: Pessoa Física</h1>
<%= link_to 'Criar  Voluntário', new_voluntario_pessoa_fisica_path, :class => "botao_verde" %>
<table>
  <tr>
    <th>Nome</th>
    <th>Email</th>
    <th>Telefone</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @voluntario_pessoa_fisicas.keys.sort.each do |starting_letter| %>
  <% @voluntario_pessoa_fisicas[starting_letter].each do |voluntario_pessoa_fisica| %>
  <tr>
    <td><%= voluntario_pessoa_fisica.nome_pf %></td>
    <td><%= voluntario_pessoa_fisica.email_pf %></td>
    <td><%= voluntario_pessoa_fisica.telefone_pf %></td>
    <td class="center_image">
      <%= link_to( image_tag("profile.png", :alt => "Ver Perfil"), voluntario_pessoa_fisica) %>
    </td>
    <td class="center_image">
      <%= link_to( image_tag("edit.png", :alt => "Editar Perfil"), edit_voluntario_pessoa_fisica_path(voluntario_pessoa_fisica)) %>
    </td>
    <td class="center_image">
      <%= link_to( image_tag("delete.png", :alt => "Apagar Perfil"), voluntario_pessoa_fisica, method: :delete, data: { confirm: 'Você tem certeza?' }) %>
    </td>
  </tr>
  <% end %>
  <% end %>



  <%= form_tag({:controller => 'voluntario_pessoa_fisicas', :action => 'buscarGeral'}, :method => 'get') do %>
        <br />
        <h3>Busca Geral:</h3>
        <%= text_field_tag :queryGeral %> <br/>
        <%= submit_tag "Buscar" %> 
    <% end  %>

    <%= form_tag({:controller => 'voluntario_pessoa_fisicas', :action => 'buscarHistorico'}, :method => 'get') do %>
        <h3>Busca pelo Histórico:</h3>
        <%= text_field_tag :queryHistorico %> <br/>
        <%= submit_tag "Buscar" %> 
    <% end  %>

    <%= form_tag({:controller => 'voluntario_pessoa_fisicas', :action => 'busca_por_afinidade'}, :method => 'get') do %>
        <h3>Busca por Afinidade:</h3>
        <%= check_box_tag :publico_criancas_pf, checked_value = true %> Criança <br/>
        <%= check_box_tag :publico_adultos_pf, checked_value = true %> Adulto <br/>
        <%= check_box_tag :publico_melhor_idade_pf, checked_value = true %> Melhor Idade<br/>
        <%= check_box_tag :publico_adolescentes_pf, checked_value = true  %> Adolescente<br/>
        <%= check_box_tag :publico_especiais_pf, checked_value = true %> Especiais<br/>
        <%= submit_tag "Buscar por Afinidade" %> 
    <% end  %>


    <%= form_tag({:controller => 'voluntario_pessoa_fisicas', :action => 'busca_por_disponibilidade'}, :method => 'get') do %>
