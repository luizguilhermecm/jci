<div id="corpo-site" style="width:40%">

<h2>Entrar</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  
  <div class='field'>
    <%= f.label :email, "Email:", :style => "width:100px" %>
    <%= f.text_field :email, :type => 'email' %>
  </div>

  <div class='field'>
    <%= f.label :password, "Senha:", :style => "width:100px" %>
    <%= f.password_field :password %>
  </div>

  <div class='field'>
    <%= f.submit 'Entrar', :class => "botao_azul", :style => "float: right" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, "Lembrar" %></div>
  <% end -%>

<% end %>
<br />
<%= render "devise/shared/links" %>

</div>
