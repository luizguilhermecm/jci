<% @posts.each do |post| %>
    <h3><%= post.titulo_not %></h3>
    <p class="data">Data: <%= post.data_not %></p>
    <% if post.photo? %>
    <p><%= image_tag post.photo.url(), :width => "80%" %></p>
    <% end %>
    <p><%= post.descricao_not %></p>
    <br />
    <%= will_paginate @posts %>
<% end %>

